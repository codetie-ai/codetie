{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run SwiftLint",
            "type": "shell",
            "command": "swiftlint",
            "args": [],
            "problemMatcher": [
                "$swiftlint"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}