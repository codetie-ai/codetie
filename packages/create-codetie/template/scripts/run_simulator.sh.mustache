#!/bin/bash

# Get the simulator name from the argument, or use the default if not provided
SIMULATOR_NAME="${1:-$(yq e '.default' simulators.yml)}"

# Run the simulator
xcrun simctl boot "$SIMULATOR_NAME"

# Launch the app (replace APP_BUNDLE_ID with your actual app bundle ID)
xcrun simctl launch booted {{APP_BUNDLE_ID}}

# Open the simulator window
open -a Simulator