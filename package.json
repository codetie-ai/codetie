{
  "name": "@codetie/codetie-monorepo",
  "private": true,
  "homepage": "https://codetie.ai",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/regenrek/codetie.git"
  },
  "license": "MIT",
  "bin": {
    "codetie-create": "./index.js"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "lint": "eslint --cache .",
    "typecheck": "tsc -p scripts --noEmit && pnpm -r --parallel run typecheck",
    "release": "tsx .release/release.ts",
    "build": "pnpm -r --filter='./packages/*' run build"
  },
  "keywords": [
    "codetie",
    "cli",
    "xcode",
    "swift",
    "project-setup",
    "cursor",
    "cursor-ai"
  ],
  "devDependencies": {
    "eslint": "^9.10.0",
    "execa": "^9.3.1",
    "globals": "^15.9.0",
    "lint-staged": "^15.2.10",
    "chalk": "^5.3.0",
    "inquirer": "^10.2.2",
    "mustache": "^4.2.0",
    "release-it": "^17.6.0",
    "yargs": "^17.7.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.4.0",
    "@vitejs/release-scripts": "^1.3.2",
    "picocolors": "^1.1.0",
    "tsx": "^4.19.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "conventional-changelog-cli": "^5.0.0",
    "rimraf": "^5.0.10",
    "simple-git-hooks": "^2.11.1",
    "tslib": "^2.7.0"
  },
  "packageManager": "pnpm@9.9.0",
  "pnpm": {
    "overrides": {
      "codetie": "workspace:*"
    }
  }
}